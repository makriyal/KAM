<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:elevation="0dp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="6dp"
        app:elevation="0dp"
        card_view:cardCornerRadius="16dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/rounded_not_border">
            <TextView
                android:id="@+id/bestSiteItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:paddingLeft="12dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/rounded_not_border"
                android:textSize="22sp"
                app:fontFamily="@font/my_font_family"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textViewSite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bestSiteItem"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/website"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                app:fontFamily="@font/my_font_family"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="8sp" />
            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewSite"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/buying"
                android:drawablePadding="12dp"
                android:gravity="center_vertical|end"
                android:textSize="18sp"
                app:fontFamily="@font/my_font_family"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="8sp" />
            <TextView
                android:id="@+id/textViewCargo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPrice"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/truck"
                android:drawablePadding="12dp"
                android:gravity="center_vertical|end"
                android:textSize="18sp"
                app:fontFamily="@font/my_font_family"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="8sp" />
            <TextView
                android:id="@+id/textViewTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewCargo"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/sigma"
                android:drawablePadding="12dp"
                android:gravity="center_vertical|end"
                android:textSize="18sp"
                app:fontFamily="@font/my_font_family"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="8sp" />
            <TextView
                android:id="@+id/textViewPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTotalPrice"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/wallet"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                app:fontFamily="@font/my_font_family"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="8sp" />
            <TextView
                android:id="@+id/textViewCreditCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPayment"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/bank_cards"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:paddingStart="50dp"
                android:textSize="18sp"
                app:fontFamily="@font/my_font_family"
                tools:ignore="RtlSymmetry"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="8sp" />
            <TextView
                android:id="@+id/textViewTransfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewCreditCard"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/money_transfer"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:paddingStart="50dp"
                android:textSize="18sp"
                app:fontFamily="@font/my_font_family"
                tools:ignore="RtlSymmetry"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="8sp" />
            <TextView
                android:id="@+id/textViewPayCash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTransfer"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/cash_in_hand"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:paddingStart="50dp"
                android:textSize="18sp"
                app:fontFamily="@font/my_font_family"
                tools:ignore="RtlSymmetry"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="8sp" />
            <TextView
                android:id="@+id/textViewPayCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPayCash"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/card_payment"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:paddingStart="50dp"
                android:textSize="18sp"
                app:fontFamily="@font/my_font_family"
                tools:ignore="RtlSymmetry"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="8sp" />
            <TextView
                android:id="@+id/textViewPaypal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPayCard"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/paypal"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:paddingStart="50dp"
                android:textSize="18sp"
                app:fontFamily="@font/my_font_family"
                tools:ignore="RtlSymmetry"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="8sp" />
            <TextView
                android:id="@+id/textViewMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPaypal"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/more"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:paddingStart="50dp"
                android:textSize="18sp"
                app:fontFamily="@font/my_font_family"
                tools:ignore="RtlSymmetry"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="8sp" />
            <TextView
                android:id="@+id/textViewInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewMore"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/info"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                app:fontFamily="@font/my_font_family"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="8sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
