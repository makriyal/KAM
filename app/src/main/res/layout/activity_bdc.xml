<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="4dp"
    tools:context=".activities.PriceActivity">
    <RelativeLayout
        android:id="@+id/sortLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">
        <Button
            android:id="@+id/buttonAlpha"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:background="@drawable/ic_icons8_alphabetical_sorting_64"
            android:gravity="center_vertical"
            android:onClick="sortAlpha" />
        <Button
            android:id="@+id/buttonAlpha2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/buttonAlpha"
            android:background="@drawable/icons8alphabeticalsorting264"
            android:gravity="center_vertical"
            android:onClick="sortAlpha2" />
        <Button
            android:id="@+id/buttonNumer2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/buttonNumer"
            android:background="@drawable/icons8numericsorting264"
            android:gravity="center_vertical"
            android:onClick="sortNumer2" />
        <Button
            android:id="@+id/buttonNumer"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/icons8numericsorting64"
            android:gravity="center_vertical"
            android:onClick="sortNumer" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/coverLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:contentDescription="@string/searching"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_flame_searching"
        android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/rounded_not_border"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="36dp"
        android:scrollbars="vertical"
        android:visibility="gone" />
    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_not_border"
        android:layout_marginBottom="-16dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:visibility="visible">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-16dp"
            android:layout_below="@+id/layoutName">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/toolbar_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginRight="2.5dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/desc"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:id="@+id/layoutInf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonAuthor"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="4"
                        android:background="@drawable/rounded_not_border"
                        android:lines="3"
                        android:onClick="more"
                        android:tag="author"
                        android:textSize="18sp"
                        app:fontFamily="@font/my_font_family" />

                    <Button
                        android:id="@+id/buttonPublisher"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="4"
                        android:background="@drawable/rounded_not_border"
                        android:lines="3"
                        android:onClick="more"
                        android:tag="publisher"
                        android:textSize="18sp"
                        app:fontFamily="@font/my_font_family" />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_border"
                    android:orientation="vertical"
                    android:layout_margin="2.5dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false">
                    <LinearLayout
                        android:id="@+id/layoutAll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textViewVolumeAndPage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp"
                            app:fontFamily="@font/my_font_family"/>
                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/colorPrimaryDark" />
                        <TextView
                            android:id="@+id/textDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="8sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp"
                            app:fontFamily="@font/my_font_family"
                            android:justificationMode="inter_word"/>
                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/colorPrimaryDark" />
                        <Button
                            android:id="@+id/buttonSeeOrSearch"
                            style="?android:buttonBarButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/rounded_not_border"
                            android:onClick="findPrices"
                            android:text="@string/ara"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp"
                            app:fontFamily="@font/my_font_family"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <RelativeLayout
            android:id="@+id/layoutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_not_border"
            android:padding="8dp">
            <!--android:background="@drawable/rounded_solid_thin_colored_border"-->
            <TextView
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:layout_toStartOf="@+id/fabUpdate"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="8sp"
                app:fontFamily="@font/my_font_family"
                android:textStyle="bold"
                android:textSize="24sp"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="6dp"
                android:layout_toStartOf="@+id/fab"
                android:src="@drawable/update"
                android:visibility="visible"
                app:backgroundTint="@color/colorWhite"
                app:elevation="0dp"
                app:fabSize="mini" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/addtofavorites"
                android:visibility="visible"
                app:backgroundTint="@color/colorWhite"
                app:elevation="0dp"
                app:fabSize="mini" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="-16dp"


        android:paddingBottom="10dp"
        android:background="@drawable/rounded_not_border"
        android:orientation="vertical"
        android:visibility="gone"
        app:behavior_hideable="false"
        app:behavior_peekHeight="100dp"
        app:layout_behavior="@string/bottom_sheet_behavior">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="-8dp"
            android:layout_below="@+id/layoutName2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/toolbar_image2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/desc"
                    tools:srcCompat="@tools:sample/avatars" />
                <LinearLayout
                    android:id="@+id/layoutInf2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/buttonAuthor2"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="4"
                        android:background="@drawable/rounded_not_border"
                        android:lines="3"
                        android:onClick="more"
                        android:tag="author"
                        android:textSize="18sp"
                        app:fontFamily="@font/my_font_family" />
                    <Button
                        android:id="@+id/buttonPublisher2"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="4"
                        android:background="@drawable/rounded_not_border"
                        android:lines="3"
                        android:onClick="more"
                        android:tag="publisher"
                        android:textSize="18sp"
                        app:fontFamily="@font/my_font_family" />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cV2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_border"
                    android:orientation="vertical"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false">
                    <LinearLayout
                        android:id="@+id/layoutAll2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textViewVolumeAndPage2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp"
                            app:fontFamily="@font/my_font_family"/>
                        <View
                            android:id="@+id/view22"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/colorPrimaryDark" />
                        <TextView
                            android:id="@+id/textDescription2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp"
                            app:fontFamily="@font/my_font_family"
                            android:justificationMode="inter_word"/>
                        <View
                            android:id="@+id/view222"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/colorPrimaryDark" />
                        <Button
                            android:id="@+id/buttonSeeOrSearch2"
                            style="?android:buttonBarButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/rounded_not_border"
                            android:onClick="addToFavs"
                            android:text="@string/add_to_favs"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp"
                            app:fontFamily="@font/my_font_family"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <RelativeLayout
            android:id="@+id/layoutName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_not_border"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">
            <!--android:background="@drawable/rounded_solid_thin_colored_border"-->
            <TextView
                android:id="@+id/nameText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:layout_toStartOf="@+id/fabUpdate2"
                android:clickable="true"
                android:focusable="true"
                android:onClick="expand"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="8sp"
                app:fontFamily="@font/my_font_family"
                android:textStyle="bold"
                android:textSize="24sp"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabUpdate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="6dp"
                android:layout_toStartOf="@+id/fab2"
                android:src="@drawable/update"
                android:visibility="visible"
                app:backgroundTint="@color/colorWhite"
                app:elevation="0dp"
                app:fabSize="mini" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/addtofavorites"
                android:visibility="visible"
                app:backgroundTint="@color/colorWhite"
                app:elevation="0dp"
                app:fabSize="mini" />
        </RelativeLayout>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:elevation="12dp" />
    <!--<com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3925997615763525/9447706610" />-->
</androidx.coordinatorlayout.widget.CoordinatorLayout>